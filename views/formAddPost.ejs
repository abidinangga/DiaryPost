<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <nav>
      Diary Post
      <button onclick="location.href='/profile'">Profile</button>
      <button onclick="location.href='/post'">All Post</button>
      <button onclick="location.href='/logout'">Logout</button>
    </nav>
    <h1>Add New Your Post</h1>
    <form action="/profile/post/create" method="POST">
      <label>Title</label>
      <br />
      <input type="text" name="title" />
      <br />
      <br />
      <label>Description</label>
      <br />
      <textarea name="description" cols="30" rows="10"></textarea>
      <br />
      <br />
      <label>Image Url</label>
      <br />
      <input type="text" name="imageUrl" />
      <br />
      <br />
      <label>Tags</label>
      <br />
      <select name="TagId">
        <% tags.forEach(el => { %>
        <option value="<%= el.id %>"><%= el.name %></option>
        <% }) %>
      </select>
      <br />
      <br />
      <button type="submit">submit</button>
      <a href="/profile/post"><input type="button" value="Cancel" /></a>
    </form>
  </body>
</html>
