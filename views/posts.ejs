<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Post</title>
</head>
<body>
    <nav>
        Diary Post
        <button onclick="location.href='/profile'">Profile</button>
        <button onclick="location.href='/post'">All Post</button>
        <button onclick="location.href='/logout'">Logout</button>
      </nav>
    <h1>All Post</h1>
    <form action="/post?title=title">
        <input type="text" placeholder="Search By Title" name="title"/>
        <input type="submit" value="Search" />
      </form>
    <table border="1">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Tag</th>
            <th>Action</th>
        </tr>
        <% posts.forEach(el => { %>
            <tr>
                <td><img src="<%= el.imageUrl %>" style="width:200px"></td>
                <td><%= el.title %> </td>
                <td><%= el.Tag.name %> </td>
                <td>
                <button onclick="location.href='/post/<%= el.id %>/detail'">Detail</button>
                </td>
            </tr>
        <% }) %> 
    </table>
</body>
</html>